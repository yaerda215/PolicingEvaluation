<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zjw.sy.mapper.CompMapper">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <select id="taskList" resultType="com.zjw.sy.entity.TaskManage" parameterType="com.zjw.sy.entity.bean.QueryCondition">
        SELECT
        *
        FROM
        task_manage
        <where>
            1=1
            <if test="type != null and type != ''">
                and taskDegree = #{type}
            </if>
            <if test="keyword != null and keyword != ''">
                and taskTitle like '%'||#{keyword}||'%'
            </if>
        </where>
        order by endTime
        limit #{length} offset #{start}
    </select>

</mapper>